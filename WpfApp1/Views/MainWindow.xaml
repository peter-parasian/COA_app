<Window x:Class="WpfApp1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="Indowire Plant 2 - Quality Control System"
        MinWidth="1000"
        MinHeight="600"
        Background="#F8F9FA"
        WindowState="Maximized">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#28A745"/>
        <SolidColorBrush x:Key="PrimaryOrange" Color="#FD7E14"/>
        <SolidColorBrush x:Key="LightGray" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="DarkGray" Color="#343A40"/>
        <SolidColorBrush x:Key="BorderGray" Color="#DEE2E6"/>

        <Style x:Key="IndowireButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryOrange}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E56A00"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#6C757D"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid x:Name="MainMenuPanel">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowBlankPage}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Stretch="Uniform" Height="80">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10">

                    <Image Source="pack://application:,,,/Images/company_logo.png"
                           Height="60"
                           Margin="0,0,15,0"/>

                    <TextBlock Text="PT. Indowire Prima Industrindo (Plan 2)"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkGray}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Viewbox>

            <TextBlock Grid.Row="1"
                        Text="SUPER TEAM"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource PrimaryOrange}"
                        HorizontalAlignment="Center"
                        Margin="0,5,0,20"/>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" 
                        Margin="10" 
                        Click="ButtonMode1_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource IndowireButtonStyle}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="pack://application:,,,/Images/logo1.jpg" Height="80"/>
                            <TextBlock Text="Busbar Copper Strip"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="0" Grid.Column="1" 
                        Margin="10" 
                        Click="ButtonMode2_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource IndowireButtonStyle}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo2.png" Height="80"/>
                            <TextBlock Text="MODE 2" 
                                       FontSize="16" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="1" Grid.Column="0" 
                        Margin="10" 
                        Click="ButtonMode3_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource IndowireButtonStyle}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo3.png" Height="80"/>
                            <TextBlock Text="MODE 3" 
                                       FontSize="16" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="1" Grid.Column="1" 
                        Margin="10" 
                        Click="ButtonMode4_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource IndowireButtonStyle}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo4.png" Height="80"/>
                            <TextBlock Text="MODE 4" 
                                       FontSize="16" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>
            </Grid>
        </Grid>

        <Grid x:Name="BlankPagePanel">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowBlankPage}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Click="ButtonBack_Click"
                        Width="45" Height="45"
                        Style="{StaticResource IndowireButtonStyle}"
                        Background="#6C757D"
                        ToolTip="Kembali ke Menu Utama">
                    <TextBlock Text="←" FontSize="24" FontWeight="Bold" Margin="0,-4,0,0"/>
                </Button>

                <Border Grid.Column="1" Margin="15,0,0,0" 
                        Background="White" 
                        CornerRadius="8" 
                        BorderBrush="{StaticResource BorderGray}" 
                        BorderThickness="1"
                        Padding="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <TextBlock Text="FILTER DATA:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource DarkGray}"
                                   Margin="0,0,15,0"/>

                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Tahun" FontSize="10" Foreground="Gray"/>
                            <ComboBox Width="100" Height="30" SelectedIndex="0">
                                <ComboBoxItem Content="2025"/>
                                <ComboBoxItem Content="2024"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Bulan" FontSize="10" Foreground="Gray"/>
                            <ComboBox Width="120" Height="30" SelectedIndex="0">
                                <ComboBoxItem Content="Januari"/>
                                <ComboBoxItem Content="Februari"/>
                                <ComboBoxItem Content="Maret"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Tanggal Produksi" FontSize="10" Foreground="Gray"/>
                            <DatePicker Width="150" Height="30"/>
                        </StackPanel>

                        <Border Width="1" Height="30" Background="{StaticResource BorderGray}" Margin="10,0"/>

                        <Button Content="CARI DATA" 
                                Width="120" Height="35"
                                FontSize="12" FontWeight="Bold"
                                Style="{StaticResource IndowireButtonStyle}"
                                Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0">
                    <TextBlock DockPanel.Dock="Top" 
                               Text="HASIL PENCARIAN DATABASE" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource DarkGray}" 
                               Margin="0,0,0,5"/>

                    <DataGrid x:Name="GridSearchResults"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              Background="White"
                              BorderBrush="{StaticResource BorderGray}"
                              BorderThickness="1"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="35">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="ADD" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="+" 
                                                Width="30" Height="25"
                                                Background="{StaticResource PrimaryGreen}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Tambahkan ke daftar sementara"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Part Name" Width="*" Binding="{Binding PartName}"/>
                            <DataGridTextColumn Header="Spesifikasi" Width="1.5*" Binding="{Binding Specification}"/>
                            <DataGridTextColumn Header="Qty" Width="60" Binding="{Binding Quantity}"/>
                            <DataGridTextColumn Header="Tanggal" Width="100" Binding="{Binding DateProd}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>

                <DockPanel Grid.Column="2">
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,5">
                        <TextBlock Text="DAFTAR SIAP EXPORT" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryGreen}" 
                                   VerticalAlignment="Center"/>

                        <Border HorizontalAlignment="Right" 
                                Background="{StaticResource PrimaryOrange}" 
                                CornerRadius="10" 
                                Padding="8,2">
                            <TextBlock Text="0 Item" 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"/>
                        </Border>
                    </Grid>

                    <DataGrid x:Name="GridBasket"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderBrush="{StaticResource PrimaryGreen}"
                              BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Part Name" Width="*" Binding="{Binding PartName}"/>
                            <DataGridTextColumn Header="Qty" Width="50" Binding="{Binding Quantity}"/>

                            <DataGridTemplateColumn Header="DEL" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="x" 
                                                Width="25" Height="25"
                                                Background="#DC3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Status:" FontWeight="Bold" Foreground="Gray" Margin="0,0,5,0"/>
                    <TextBlock Text="Menunggu input user..." Foreground="{StaticResource DarkGray}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="GENERATE EXCEL"
                        Width="200" Height="45"
                        FontSize="14" FontWeight="Bold"
                        Style="{StaticResource IndowireButtonStyle}"
                        Background="#217346" 
                        ToolTip="Export data terpilih ke Excel">
                </Button>
            </Grid>

        </Grid>

    </Grid>
</Window>