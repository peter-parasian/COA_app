<mah:MetroWindow x:Class="WpfApp1.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:local="clr-namespace:WpfApp1"
                 mc:Ignorable="d"
                 Title="Indowire Plant 2 - Quality Control System"
                 MinWidth="1000"
                 MinHeight="700"
                 GlowBrush="{StaticResource MahApps.Brushes.Accent}"
                 BorderThickness="1"
                 TitleCharacterCasing="Normal"
                 WindowStartupLocation="CenterScreen"
                 WindowState="Maximized">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#28A745"/>
        <SolidColorBrush x:Key="PrimaryOrange" Color="#FD7E14"/>
        <SolidColorBrush x:Key="TextLight" Color="#6C757D"/>

        <Style x:Key="BigMenuButton" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Square}">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="mah:ControlsHelper.ContentCharacterCasing" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryOrange}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0">

        <Grid x:Name="MainMenuPanel" Margin="20">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowBlankPage}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Stretch="Uniform" Height="80">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10">
                    <Image Source="pack://application:,,,/Images/company_logo.png"
                           Height="60" Margin="0,0,15,0" RenderOptions.BitmapScalingMode="HighQuality"/>

                    <TextBlock Text="PT. Indowire Prima Industrindo (Plan 2)"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MahApps.Brushes.Text}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Viewbox>

            <TextBlock Grid.Row="1"
                       Text="SUPER TEAM"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryOrange}"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,20"/>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" 
                        Margin="15" 
                        Click="ButtonMode1_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource BigMenuButton}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="pack://application:,,,/Images/logo1.jpg" Height="80" Margin="0,0,0,10"/>
                            <TextBlock Text="Busbar Copper Strip" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="0" Grid.Column="1" 
                        Margin="15" 
                        Click="ButtonMode2_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource BigMenuButton}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo2.png" Height="80" Margin="0,0,0,10"/>
                            <TextBlock Text="MODE 2" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="1" Grid.Column="0" 
                        Margin="15" 
                        Click="ButtonMode3_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource BigMenuButton}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo3.png" Height="80" Margin="0,0,0,10"/>
                            <TextBlock Text="MODE 3" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="1" Grid.Column="1" 
                        Margin="15" 
                        Click="ButtonMode4_Click"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource BigMenuButton}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo4.png" Height="80" Margin="0,0,0,10"/>
                            <TextBlock Text="MODE 4" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Viewbox>
                </Button>
            </Grid>
        </Grid>

        <Grid x:Name="BlankPagePanel" Margin="25">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowBlankPage}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Click="ButtonBack_Click"
                        Width="45" Height="45"
                        Style="{StaticResource MahApps.Styles.Button.Circle}"
                        Background="{DynamicResource MahApps.Brushes.Gray7}"
                        BorderThickness="0"
                        ToolTip="Kembali ke Menu Utama"
                        Margin="0,0,20,0">
                    <iconPacks:PackIconModern Kind="ArrowLeft" Width="20" Height="20" Foreground="White" />
                </Button>

                <Border Grid.Column="1" Style="{StaticResource ModernCard}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,15">

                        <StackPanel VerticalAlignment="Center" Margin="0,0,25,0">
                            <TextBlock Text="FILTER DATA" 
                                       FontSize="14"
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryGreen}"/>
                            <TextBlock Text="Pencarian Database"
                                       FontSize="12"
                                       Foreground="{StaticResource TextLight}"/>
                        </StackPanel>

                        <Border Width="1" Height="30" Background="{DynamicResource MahApps.Brushes.Gray8}" Margin="0,0,20,0"/>
                        
                        <StackPanel Margin="0,0,15,0" VerticalAlignment="Center">
                            <TextBlock Text="Tahun" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextLight}" Margin="0,0,0,4"/>
                            <ComboBox Width="110" SelectedIndex="0" Style="{StaticResource MahApps.Styles.ComboBox}">
                                <ComboBoxItem Content="2025"/>
                                <ComboBoxItem Content="2024"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,15,0" VerticalAlignment="Center">
                            <TextBlock Text="Bulan" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextLight}" Margin="0,0,0,4"/>
                            <ComboBox Width="140" SelectedIndex="0" Style="{StaticResource MahApps.Styles.ComboBox}">
                                <ComboBoxItem Content="Januari"/>
                                <ComboBoxItem Content="Februari"/>
                                <ComboBoxItem Content="Maret"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,20,0" VerticalAlignment="Center">
                            <TextBlock Text="Tanggal Produksi" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextLight}" Margin="0,0,0,4"/>
                            <DatePicker Width="160" 
                                        Style="{StaticResource MahApps.Styles.DatePicker}" 
                                        mah:TextBoxHelper.Watermark="Pilih Tanggal"/>
                        </StackPanel>

                        <Button Content="CARI DATA" 
                                Width="130"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.2*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource ModernCard}" Padding="0">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" 
                                Background="Transparent" 
                                Padding="20,15"
                                BorderThickness="0,0,0,1"
                                BorderBrush="{DynamicResource MahApps.Brushes.Gray8}">
                            <TextBlock Text="HASIL PENCARIAN DATABASE" 
                                       FontWeight="Bold" 
                                       FontSize="14"
                                       Foreground="{DynamicResource MahApps.Brushes.Text}"/>
                        </Border>

                        <DataGrid x:Name="GridSearchResults"
                                  Style="{StaticResource MahApps.Styles.DataGrid}"
                                  BorderThickness="0"
                                  mah:DataGridHelper.CellPadding="10,5"
                                  mah:DataGridHelper.ColumnHeaderPadding="10,10"
                                  AutoGenerateColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single"
                                  Margin="1">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="AKSI" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                    Width="30" Height="30"
                                                    BorderThickness="0"
                                                    Background="{StaticResource PrimaryGreen}"
                                                    Foreground="White"
                                                    ToolTip="Tambahkan ke daftar">
                                                <iconPacks:PackIconModern Kind="Add" Width="12" Height="12" />
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Part Name" Width="*" Binding="{Binding PartName}"/>
                                <DataGridTextColumn Header="Spesifikasi" Width="1.5*" Binding="{Binding Specification}"/>
                                <DataGridTextColumn Header="Qty" Width="80" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Tanggal" Width="120" Binding="{Binding DateProd}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource ModernCard}" Padding="0">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" 
                                Padding="15" 
                                Background="Transparent"
                                BorderThickness="0,0,0,1"
                                BorderBrush="{DynamicResource MahApps.Brushes.Gray8}">
                            <Grid>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="DAFTAR EXPORT" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               Foreground="{StaticResource PrimaryGreen}"/>
                                    <TextBlock Text="Item Siap Diproses"
                                               FontSize="12"
                                               Foreground="{StaticResource TextLight}"/>
                                </StackPanel>
                                <Border HorizontalAlignment="Right" 
                                        VerticalAlignment="Top"
                                        Background="{StaticResource PrimaryOrange}" 
                                        CornerRadius="10" 
                                        Padding="10,2">
                                    <TextBlock Text="0 Item" 
                                               Foreground="White" 
                                               FontSize="11" 
                                               FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>

                        <DataGrid x:Name="GridBasket"
                                  Style="{StaticResource MahApps.Styles.DataGrid}"
                                  BorderThickness="0"
                                  mah:DataGridHelper.CellPadding="10,5"
                                  AutoGenerateColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Part Name" Width="*" Binding="{Binding PartName}"/>
                                <DataGridTextColumn Header="Qty" Width="60" Binding="{Binding Quantity}"/>

                                <DataGridTemplateColumn Header="HAPUS" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                    Width="25" Height="25"
                                                    BorderThickness="0"
                                                    Background="#DC3545"
                                                    Foreground="White"
                                                    ToolTip="Hapus item">
                                                <iconPacks:PackIconModern Kind="Close" Width="10" Height="10" />
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="4" 
                        BorderBrush="{DynamicResource MahApps.Brushes.Gray8}"
                        BorderThickness="1"
                        Padding="15,0"
                        Height="45"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <iconPacks:PackIconModern Kind="InformationCircle" Foreground="{StaticResource PrimaryOrange}" Margin="0,0,10,0"/>
                        <TextBlock Text="Status System:" FontWeight="Bold" Foreground="{StaticResource TextLight}" Margin="0,0,5,0"/>
                        <TextBlock Text="Menunggu input user..." Foreground="{DynamicResource MahApps.Brushes.Text}" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <Button Grid.Column="1"
                        Content="GENERATE EXCEL"
                        Width="220" Height="45"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                        Background="#217346" 
                        ToolTip="Export data terpilih ke Excel"/>
            </Grid>
        </Grid>
    </Grid>
</mah:MetroWindow>