<Controls:MetroWindow x:Class="WpfApp1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Indowire Plant 2 - Quality Control System"
        MinWidth="1000"
        MinHeight="700"
        Background="#F4F7F6"
        FontFamily="Segoe UI"
        WindowState="Maximized"
        SaveWindowPosition="True"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        ShowTitleBar="False"
        WindowTitleBrush="{DynamicResource MahApps.Brushes.Accent}"
        NonActiveWindowTitleBrush="Gray"
        NonActiveGlowBrush="Gray">

    <Window.Resources>
        <Style x:Key="IndowireMetroBtn" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Square}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="Auto"/>
        </Style>

        <Style x:Key="IndowireMetroBtnAccent" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Square.Accent}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="Auto"/>
        </Style>

        <Style x:Key="CircleBackBtnStyle" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Circle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FD7E14"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="25" CenterY="25"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredColumnHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="SeparatorVisibility" Value="Hidden"/>
        </Style>

        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Template Khusus untuk Dropdown ke Atas -->
        <ControlTemplate x:Key="UpComboBoxControlTemplate" TargetType="ComboBox">
            <Grid>
                <ToggleButton Name="ToggleButton" 
                              Grid.Column="2" 
                              Background="White"
                              BorderBrush="#DEE2E6"
                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                              ClickMode="Press"
                              Focusable="false">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="#6C757D" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <ContentPresenter Name="ContentSite" 
                                  IsHitTestVisible="False" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center"
                                  Margin="5,0,0,0" 
                                  Content="{TemplateBinding SelectionBoxItem}"
                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>

                <TextBox Name="PART_EditableTextBox" 
                         Style="{x:Null}" 
                         Template="{DynamicResource ComboBoxTextBox}" 
                         HorizontalAlignment="Left" 
                         VerticalAlignment="Center" 
                         Margin="3,3,23,3"
                         Focusable="True" 
                         Background="Transparent"
                         Visibility="Hidden"
                         IsReadOnly="{TemplateBinding IsReadOnly}"/>

                <!-- Popup dengan Placement="Top" agar terbuka ke atas -->
                <Popup Name="Popup" 
                       Placement="Top" 
                       IsOpen="{TemplateBinding IsDropDownOpen}" 
                       AllowsTransparency="True" 
                       Focusable="False" 
                       PopupAnimation="Slide">
                    <Grid Name="DropDown" 
                          SnapsToDevicePixels="True" 
                          MinWidth="{TemplateBinding ActualWidth}" 
                          MaxHeight="200">
                        <Border Background="White" BorderBrush="#DEE2E6" BorderThickness="1">
                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Popup>
            </Grid>
        </ControlTemplate>

    </Window.Resources>

    <Grid Margin="0">

        <Grid x:Name="MainMenuPanel" Margin="20">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowBlankPage}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Stretch="Uniform" Height="80">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Image Source="pack://application:,,,/Images/company_logo.png" Height="60" Margin="0,0,15,0"/>
                    <TextBlock Text="PT. Indowire Prima Industrindo (Plan 2)" FontSize="28" FontWeight="Bold" Foreground="#343A40" VerticalAlignment="Center"/>
                </StackPanel>
            </Viewbox>

            <TextBlock Grid.Row="1" Text="SUPER TEAM" FontSize="22" FontWeight="SemiBold" Foreground="#FD7E14" HorizontalAlignment="Center" Margin="0,5,0,20"/>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Margin="10" Click="ButtonMode1_Click" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource IndowireMetroBtnAccent}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="pack://application:,,,/Images/logo1.jpg" Height="80"/>
                            <TextBlock Text="Busbar Copper Strip" FontSize="16" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="0" Grid.Column="1" Margin="10" Click="ButtonMode2_Click" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource IndowireMetroBtnAccent}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo2.png" Height="80"/>
                            <TextBlock Text="MODE 2" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="1" Grid.Column="0" Margin="10" Click="ButtonMode3_Click" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource IndowireMetroBtnAccent}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo3.png" Height="80"/>
                            <TextBlock Text="MODE 3" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>

                <Button Grid.Row="1" Grid.Column="1" Margin="10" Click="ButtonMode4_Click" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource IndowireMetroBtnAccent}">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Vertical">
                            <Image Source="pack://application:,,,/Images/logo4.png" Height="80"/>
                            <TextBlock Text="MODE 4" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Button>
            </Grid>
        </Grid>

        <Grid x:Name="BlankPagePanel" Margin="25">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowBlankPage}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Click="ButtonBack_Click" Style="{StaticResource CircleBackBtnStyle}" ToolTip="Kembali ke Menu Utama" Margin="0,0,20,0">
                    <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="20" FontWeight="Bold"/>
                </Button>

                <Border Grid.Column="1" Background="White" CornerRadius="4" BorderBrush="#DEE2E6" BorderThickness="1" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel VerticalAlignment="Center" Margin="0,0,25,0">
                                <TextBlock Text="DATA FILTER" FontSize="14" FontWeight="Bold" Foreground="#28A745"/>
                                <TextBlock Text="DATABASE SEARCH" FontSize="11" Foreground="#6C757D"/>
                            </StackPanel>

                            <Border Width="1" Height="35" Background="#CED4DA" Margin="0,0,20,0"/>

                            <StackPanel Margin="0,0,15,0" VerticalAlignment="Center">
                                <TextBlock Text="YEAR" FontSize="11" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,4"/>
                                <ComboBox Width="100" SelectedIndex="0" Style="{StaticResource MahApps.Styles.ComboBox}">
                                    <ComboBoxItem Content="2025"/>
                                    <ComboBoxItem Content="2024"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Margin="0,0,15,0" VerticalAlignment="Center">
                                <TextBlock Text="MONTH" FontSize="11" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,4"/>
                                <ComboBox Width="130" SelectedIndex="0" Style="{StaticResource MahApps.Styles.ComboBox}">
                                    <ComboBoxItem Content="Januari"/>
                                    <ComboBoxItem Content="Februari"/>
                                    <ComboBoxItem Content="Maret"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Margin="0,0,20,0" VerticalAlignment="Center">
                                <TextBlock Text="PRODUCTION DATE" FontSize="11" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,4"/>
                                <DatePicker Width="150" Style="{StaticResource MahApps.Styles.DatePicker}"/>
                            </StackPanel>

                            <Button Content="FIND" Width="100" Height="38" FontSize="13" FontWeight="SemiBold" Controls:ControlsHelper.ContentCharacterCasing="Upper"
                                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}" VerticalAlignment="Bottom"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Border Background="#FFF4E6" HorizontalAlignment="Right" CornerRadius="3" Padding="8,3" Margin="0,0,0,2">
                                <TextBlock Text="MODE 1 ACTIVE" FontSize="10" FontWeight="Bold" Foreground="#FD7E14"/>
                            </Border>
                            <TextBlock Text="COA Busbar Strip" FontSize="24" FontWeight="Black" Foreground="#FD7E14" HorizontalAlignment="Right">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#FFDAC0" BlurRadius="0" ShadowDepth="2" Direction="315" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="4" BorderBrush="#DEE2E6" BorderThickness="1">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" Background="#F8F9FA" Padding="15,10" BorderThickness="0,0,0,1" BorderBrush="#E9ECEF" CornerRadius="4,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#6C757D"/>
                                <TextBlock Text="SEARCH RESULTS" FontWeight="Bold" FontSize="14" Foreground="#495057"/>
                            </StackPanel>
                        </Border>

                        <DataGrid x:Name="GridSearchResults"
                                  Style="{StaticResource MahApps.Styles.DataGrid}"
                                  AutoGenerateColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  IsReadOnly="True"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ColumnHeaderStyle="{StaticResource CenteredColumnHeaderStyle}"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NO" Width="50" Binding="{Binding PartName}" ElementStyle="{StaticResource CenteredCellStyle}"/>

                                <DataGridTextColumn Header="SIZE (SPEC)" Width="*" Binding="{Binding Specification}" ElementStyle="{StaticResource CenteredCellStyle}"/>

                                <DataGridTextColumn Header="PROD DATE" Width="*" Binding="{Binding DateProd}" ElementStyle="{StaticResource CenteredCellStyle}"/>

                                <DataGridTemplateColumn Header="ACTION" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="+" Width="30" Height="26" Background="#28A745" Foreground="White"
                                                    FontSize="16" Padding="0,-2,0,0" BorderThickness="0" Cursor="Hand"
                                                    ToolTip="Tambahkan ke daftar" Style="{StaticResource MahApps.Styles.Button.Square}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="4" BorderBrush="#DEE2E6" BorderThickness="1">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" Background="#F8F9FA" Padding="15,10" BorderThickness="0,0,0,1" BorderBrush="#E9ECEF" CornerRadius="4,4,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#28A745"/>
                                    <StackPanel>
                                        <TextBlock Text="EXPORT LIST" FontWeight="Bold" FontSize="14" Foreground="#28A745"/>
                                    </StackPanel>
                                </StackPanel>
                                <Border HorizontalAlignment="Right" Background="#FD7E14" CornerRadius="10" Padding="10,2" VerticalAlignment="Center">
                                    <TextBlock Text="0 Items" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>

                        <DataGrid x:Name="GridBasket"
                                  Style="{StaticResource MahApps.Styles.DataGrid}"
                                  AutoGenerateColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  IsReadOnly="True"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ColumnHeaderStyle="{StaticResource CenteredColumnHeaderStyle}"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NO" Width="50" Binding="{Binding PartName}" ElementStyle="{StaticResource CenteredCellStyle}"/>

                                <DataGridTextColumn Header="SIZE (SPEC)" Width="*" Binding="{Binding Specification}" ElementStyle="{StaticResource CenteredCellStyle}"/>

                                <DataGridTextColumn Header="PROD DATE" Width="*" Binding="{Binding DateProd}" ElementStyle="{StaticResource CenteredCellStyle}"/>

                                <DataGridTemplateColumn Header="ACTION" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="×" Width="30" Height="26" Background="#DC3545" Foreground="White"
                                                    FontSize="18" Padding="0,-4,0,0" BorderThickness="0" Cursor="Hand"
                                                    ToolTip="Hapus dari daftar" Style="{StaticResource MahApps.Styles.Button.Square}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="4" BorderBrush="#DEE2E6" BorderThickness="1" 
                        Padding="15,0" Height="55" VerticalAlignment="Center" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Standard:" FontSize="12" FontWeight="Bold" Foreground="#6C757D" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <!-- Menggunakan Template khusus agar dropdown terbuka ke atas -->
                            <ComboBox Width="100" SelectedIndex="0" Template="{StaticResource UpComboBoxControlTemplate}" VerticalAlignment="Center">
                                <ComboBoxItem Content="JIS"/>
                                <ComboBoxItem Content="DIN"/>
                                <ComboBoxItem Content="ASTM"/>
                            </ComboBox>
                        </StackPanel>

                        <Border Width="1" Height="25" Background="#DEE2E6" Margin="20,0"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Customer:" FontSize="12" FontWeight="Bold" Foreground="#6C757D" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Width="180" Style="{StaticResource MahApps.Styles.TextBox}"
                                     Controls:TextBoxHelper.Watermark="Input Name..."
                                     Controls:TextBoxHelper.ClearTextButton="True"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Width="1" Height="25" Background="#DEE2E6" Margin="20,0"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="PO Number:" FontSize="12" FontWeight="Bold" Foreground="#6C757D" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Width="140" Style="{StaticResource MahApps.Styles.TextBox}"
                                     Controls:TextBoxHelper.Watermark="e.g. PO-1234"
                                     Controls:TextBoxHelper.ClearTextButton="True"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Button Grid.Column="1" Content="PRINT COA"
                        Controls:ControlsHelper.ContentCharacterCasing="Upper"
                        Width="200" Height="55" FontSize="16" FontWeight="Bold"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                        ToolTip="Export data terpilih ke Excel"/>
            </Grid>
        </Grid>
    </Grid>
</Controls:MetroWindow>