<Controls:MetroWindow
    x:Class="WpfApp1.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Indowire Plant 2 - Quality Control System Version 7.0"
    MinWidth="1100"
    MinHeight="700"
    Background="#F4F7F6"
    FontFamily="Segoe UI"
    GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
    Icon="pack://application:,,,/Shared/Images/app_logo.ico"
    NonActiveGlowBrush="Gray"
    NonActiveWindowTitleBrush="Gray"
    SaveWindowPosition="True"
    ShowTitleBar="True"
    WindowState="Maximized"
    WindowTitleBrush="{DynamicResource MahApps.Brushes.Accent}"
    mc:Ignorable="d">

    <Grid>
        <ContentControl x:Name="MainContentRegion" />

        <Grid
            x:Name="ProgressOverlay"
            d:Visibility="Visible"
            Visibility="{Binding IsBusyVisibility}">
            <Border Background="#99000000" IsHitTestVisible="True" />
            <Border
                Width="350"
                Height="Auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="4"
                Effect="{DynamicResource MahApps.DropShadowEffect.Dialog}">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding BusyMessage}"
                        TextAlignment="Center" />
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="11"
                        Foreground="#555"
                        Text="{Binding ProgressText}"
                        TextAlignment="Center" />
                    <ProgressBar
                        Height="20"
                        Margin="0,0,0,10"
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                        Maximum="{Binding ProgressMaximum}"
                        Value="{Binding ProgressValue}" />
                    <TextBlock
                        FontSize="10"
                        Foreground="Gray"
                        Text="Please wait, do not close this window..."
                        TextAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Controls:MetroWindow>