<UserControl
    x:Class="WpfApp1.Views.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1100"
    mc:Ignorable="d">

    <Grid Margin="20,40,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Viewbox Height="80" Stretch="Uniform">
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Height="60"
                    Margin="0,0,15,0"
                    Source="pack://application:,,,/Images/company_logo.png" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#343A40"
                    Text="PT. Indowire Prima Industrindo (Plan 2)" />
            </StackPanel>
        </Viewbox>

        <TextBlock
            Grid.Row="1"
            Margin="0,5,0,20"
            HorizontalAlignment="Center"
            FontSize="22"
            FontWeight="SemiBold"
            Foreground="#FD7E14"
            Text="SUPER TEAM" />

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                Click="ButtonMode1_Click"
                IsEnabled="{Binding IsNotBusy}"
                Style="{StaticResource IndowireMetroBtnAccent}">
                <Viewbox Stretch="Uniform">
                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                        <Image Height="80" Source="pack://application:,,,/Images/logo1.jpg" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Copper Busbar" />
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="10"
                Click="ButtonMode2_Click"
                IsEnabled="{Binding IsNotBusy}"
                Style="{StaticResource IndowireMetroBtnAccent}">
                <Viewbox Stretch="Uniform">
                    <StackPanel Orientation="Vertical">
                        <Image Height="80" Source="pack://application:,,,/Images/logo2.jpg" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="COA SIEMENS" />
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="10"
                Click="ButtonMode3_Click"
                IsEnabled="{Binding IsNotBusy}"
                Style="{StaticResource IndowireMetroBtnAccent}">
                <Viewbox Stretch="Uniform">
                    <StackPanel Orientation="Vertical">
                        <Image Height="80" Source="pack://application:,,,/Images/logo3.jpg" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Copper Wire" />
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                Click="ButtonMode4_Click"
                IsEnabled="{Binding IsNotBusy}"
                Style="{StaticResource IndowireMetroBtnAccent}">
                <Viewbox Stretch="Uniform">
                    <StackPanel Orientation="Vertical">
                        <Image Height="80" Source="pack://application:,,,/Images/logo4.jpg" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="History" />
                    </StackPanel>
                </Viewbox>
            </Button>
        </Grid>
    </Grid>
</UserControl>